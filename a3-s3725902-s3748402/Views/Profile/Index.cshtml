@model Customer
@{
    ViewData["Title"] = "Profile";
}

<div>
    <h3>Your Profile </h3>
    <form>
        <dl class="row">
            <dt class="col-sm-3" asp-for="Name">Name</dt>
            <dd class="col-sm-9"> @Model.Name</dd>

            <dt class="col-sm-3" asp-for="Tfn">TFN</dt>
            <dd class="col-sm-9"> @Model.Tfn </dd>

            <dt class="col-sm-3" asp-for="Address.Phone">Phone</dt>
            <dd class="col-sm-9">@Model.Address.Phone</dd>

            <dt class="col-sm-3" asp-for="Address.Street">Street</dt>
            <dd class="col-sm-9">@Model.Address.Street</dd>

            <dt class="col-sm-3" asp-for="Address.City">City</dt>
            <dd class="col-sm-9">@Model.Address.City</dd>

            <dt class="col-sm-3" asp-for="Address.State">State</dt>
            <dd class="col-sm-9">@Model.Address.State</dd>

            <dt class="col-sm-3" asp-for="Address.PostCode">PostCode</dt>
            <dd class="col-sm-9">@Model.Address.PostCode</dd>
        </dl>
        <a class="btn btn-primary"
           asp-action="Edit" asp-route-customerID="@Model.CustomerID">Modify</a>
    </form>
</div>
