@model IEnumerable<Account>
@{
    ViewData["Title"] = "Account Index";
}

<h1>Account Index</h1>

<table class="table">
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(model => model.AccountNumber) </th>
            <th> @Html.DisplayNameFor(model => model.AccountType) </th>
            <th> @Html.DisplayNameFor(model => model.CustomerID) </th>
            <th> @Html.DisplayNameFor(model => model.Balance) </th>
            <th> @Html.DisplayNameFor(model => model.ModifyDate) </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var acct in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelCust => acct.AccountNumber)</td>
            <td>@Html.DisplayFor(modelCust => acct.AccountType)</td>
            <td>@Html.DisplayFor(modelCust => acct.CustomerID)</td>
            <td>@Html.DisplayFor(modelCust => acct.Balance)</td>
            <td>@Html.DisplayFor(modelCust => acct.ModifyDate)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@acct.AccountNumber">Edit</a> | 
                <a asp-action="Delete" asp-route-id="@acct.AccountNumber">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

