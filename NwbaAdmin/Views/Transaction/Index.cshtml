@model TransactionViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Transactions</h1>


<form asp-action="Index" name="Form1" id="Form1">
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label asp-for="SelectedCustomerNumber">Select Customer </label>
                @Html.DropDownListFor(x => Model.SelectedCustomerNumber, new SelectList(Model.CustomerList, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "custNo" })
            </div>

            <div class="form-group">
                @Html.HiddenFor(x => x.SelectedCustomerNumber)
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label asp-for="FromDate" class="control-label"></label>
                <input asp-for="FromDate" class="form-control" />
                <span asp-validation-for="FromDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label asp-for="ToDate" class="control-label"></label>
                <input asp-for="ToDate" class="form-control" />
                <span asp-validation-for="ToDate" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <input type="submit" id="filter" value="Filter" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Type
            </th>
            <th>
                Account Number
            </th>
            <th>
                Amount
            </th>
            <th>
                To Account  
            </th>
            <th>
                Comment
            </th>
            <th>
                Transaction Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Transactions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DestinationAccountNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionTimeUtc)
                </td>
                <td>
                    @*<a asp-action="View" asp-route-id="@item.CustomerID">View</a> |
                        <a asp-action="Edit" asp-route-id="@item.CustomerID">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.CustomerID">Delete</a> |
                        <a asp-action="LockOrUnlock" asp-route-id="@item.CustomerID">Lock</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>

